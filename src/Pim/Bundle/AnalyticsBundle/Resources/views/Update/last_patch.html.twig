{% if is_last_patch_enabled() %}
    <strong>{{ 'pim_dashboard.last_patch_available'|trans }}:</strong><span class="last-patch-available"></span>

    <script type="text/javascript">
        require(
            ['jquery', 'pim/patch-fetcher'],
            function ($, Fetcher) {
                $(function() {
                    var updateServerUrl = "{{ get_update_server_url() }}";
                    Fetcher.fetch(updateServerUrl).then(function (patch) {
                        $('.last-patch-available:first').text(patch);
                    });
                });
            }
        );
    </script>
{% endif %}
