<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    bootstrap="bootstrap.php.cache" >

    <php>
        <ini name="intl.default_locale" value="en"/>
        <ini name="intl.error_level" value="0"/>
        <ini name="memory_limit" value="-1"/>
        <ini name="zend.enable_gc" value="0"/>
    </php>

    <testsuites>

        <!-- Project (PIM+Oro) test suites -->
        <testsuite name="Project_Test">
            <directory suffix="Test.php">../src/*/Bundle/*Bundle/Tests/Unit</directory>
            <directory suffix="Test.php">../src/*/Bundle/*Bundle/Tests/Functional</directory>
        </testsuite>

        <!-- PIM test suites -->
        <testsuite name="PIM_Unit_Test">
            <directory suffix="Test.php">../src/Pim/Bundle/*Bundle/Tests/Unit</directory>
        </testsuite>
        <testsuite name="PIM_Functional_Test">
            <directory suffix="Test.php">../src/Pim/Bundle/*Bundle/Tests/Functional</directory>
        </testsuite>
        <testsuite name="PIM_Performance_Test">
            <directory suffix="Perf.php">../src/Pim/Bundle/*Bundle/Tests/Performance</directory>
        </testsuite>

        <!-- Jenkins test suite -->
        <testsuite name="Jenkins_PIM_Test">
            <directory suffix="Test.php">../src/Pim/Bundle/*Bundle/Tests/Unit</directory>
            <directory suffix="Test.php">../src/Pim/Bundle/*Bundle/Tests/Functional</directory>
        </testsuite>

        <testsuite name="Product">
            <directory suffix="Test.php">../src/Pim/Bundle/ProductBundle/Tests/Unit</directory>
        </testsuite>

        <testsuite name="Flexible">
            <directory suffix="Test.php">../vendor/oro/flexible-entity-bundle/Oro/Bundle/FlexibleEntityBundle/Tests/Unit</directory>
        </testsuite>

        <testsuite name="Measure">
            <directory suffix="Test.php">../vendor/oro/measure-bundle/Oro/Bundle/MeasureBundle/Tests</directory>
        </testsuite>

        <testsuite name="Translation">
            <directory suffix="Test.php">../src/Pim/Bundle/TranslationBundle/Tests/Unit</directory>
        </testsuite>

    </testsuites>

    <filter>
        <whitelist>
            <directory>../src/Pim</directory>
            <exclude>
                <!-- exclude demo used load sample data -->
                <directory>../src/Pim/DemoBundle</directory>
                <directory>../src/*/*Bundle/Resources</directory>
                <directory>../src/*/*Bundle/Tests</directory>
                <directory>../src/*/Bundle/*Bundle/Resources</directory>
                <directory>../src/*/Bundle/*Bundle/Tests</directory>
                <directory>../src/*/Bundle/*Bundle/vendor</directory>
                <directory>../src/*/Bundle/*Bundle/cov</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
